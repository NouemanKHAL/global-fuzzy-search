{
  "name": "global-fuzzy-search",
  "displayName": "Global Fuzzy Search",
  "description": "Fuzzy search for content across your workspace files",
  "version": "0.0.1",
  "repository": "https://github.com/NouemanKHAL/global-fuzzy-search",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:global-fuzzy-search.fuzzySearch"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "searchResultsContainers",
          "title": "Search Results",
          "icon": "search.png"
        }
      ]
    },
    "views": {
      "searchResultsContainers": [
        {
          "type": "webview",
          "id": "searchInput",
          "name": "Fuzzy Search"
        },
        {
          "id": "searchResults",
          "name": "Results"
        }
      ]
    },
    "commands": [
      {
        "command": "global-fuzzy-search.fuzzySearch",
        "title": "Fuzzy Search"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.11",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "esbuild": "^0.17.8",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "fastest-levenshtein": "^1.0.16"
  }
}
